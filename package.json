{
  "name": "teklifbul-web",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "preinstall": "npm config set legacy-peer-deps true",
    "prepare": "husky install",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "api": "tsx server/src/index.ts",
    "dev:api": "tsx watch server/index.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "smoke": "tsx scripts/smoke-tax-offices.ts",
    "preview": "vite preview",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "test:setup": "npm i -D @firebase/rules-unit-testing@^3.0.4",
    "emulators": "firebase emulators:start",
    "backfill:categories": "node scripts/backfill-categories.js",
    "backfill:satfk": "node scripts/backfill-satfk.js",
    "build:il-ilce": "node scripts/build-il-ilce.cjs",
    "import:tr-districts": "node scripts/import-tr-districts.js",
    "import:countries": "node scripts/import-countries.js",
    "test:mapping": "tsx scripts/test-mapping.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:mahalle": "node scripts/build-mahalle.cjs",
    "sync:streets": "node scripts/sync-streets.js",
    "update:turkiye": "node scripts/update-turkiye-data.js",
    "sync:streets:beykoz": "node scripts/fetch-streets-beykoz.cjs",
    "seed:categories": "tsx scripts/seed-categories.ts",
    "migrate:categories": "tsx src/db/migrations/run-migrations.ts src/modules/categories/migrations/001_create_categories_tables.sql",
    "migrate:tax-offices": "tsx src/db/migrations/run-migrations.ts src/modules/taxOffices/migrations/001_create_tax_offices_tables.sql",
    "test:connections": "tsx scripts/test-connections.ts",
    "test:categories-api": "tsx scripts/test-categories-api.ts",
    "test:category-system": "tsx scripts/test-category-system.ts",
    "etl:tax-offices": "tsx src/modules/taxOffices/etl-tax-offices.ts",
    "test:tax-offices-api": "tsx scripts/test-tax-offices-api.ts",
    "test:migration": "tsx scripts/test-migration-complete.ts",
    "test:migration-api": "tsx scripts/test-migration-api.ts",
    "setup": "tsx scripts/setup-and-run.ts",
    "setup:docker": "powershell -ExecutionPolicy Bypass -File scripts/auto-setup-after-docker.ps1",
    "fix:join-requests": "tsx scripts/fix-company-join-requests.ts",
    "fix:test-requests": "tsx scripts/fix-test-user-requests.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@types/pg": "^8.15.6",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "fast-levenshtein": "^3.0.0",
    "firebase": "^12.4.0",
    "firebase-admin": "^13.5.0",
    "firebase-tools": "^14.20.0",
    "ioredis": "^5.8.2",
    "leaflet": "^1.9.4",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.7.0",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^3.11.174",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.65.0",
    "react-router-dom": "^7.9.5",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/cors": "^2.8.19",
    "@types/jest": "^29.5.12",
    "@types/leaflet": "^1.9.8",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.6.0",
    "@types/node-cache": "^4.2.5",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.6",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7"
  },
  "description": "This template provides a minimal setup to get React working in Vite with HMR and some ESLint rules.",
  "main": "index.html",
  "directories": {
    "test": "test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "!assets/js/vendor/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json}": [
      "npm run lint -- --fix",
      "npm run type-check -w 1"
    ]
  }
}
